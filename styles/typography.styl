html
  font-family: $font-family
  font-size: $font-size
body
  line-height: 1.45
  color: $secondary-black-lighter
for val in 1 2 3 4 5
  h{val}
    font-weight: $font-weight-bold
    margin: 2.75rem 0 1rem
    line-height: 1.15;
    border-bottom: 2px solid $accent
h1
  margin-top: 0
  font-size: 4.209em
h2
  font-size: 3.157em
h3
  font-size: 2.369em
h4
  font-size: 1.777em
h5
  font-size: 1.333em
p
  margin-bottom: 1.2
small, .text-small
  font-size: .75em
a
  text-decoration: none
  font-weight: $font-weight-bold